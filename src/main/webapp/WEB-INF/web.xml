  </servlet>
  
  <servlet-mapping>
  	<servlet-name>GetItems</servlet-name>
  	<url-pattern>/getitems</url-pattern>
  </servlet-mapping>
   <servlet>
 	 <servlet-name>EditItem</servlet-name>
