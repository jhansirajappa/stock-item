  <servlet>
 	 <servlet-name>DeleteItem</servlet-name>
  	<servlet-class>com.ty.controller.DeleteItemServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>DeleteItem</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
   <servlet>
 	 <servlet-name>GetItems</servlet-name>
