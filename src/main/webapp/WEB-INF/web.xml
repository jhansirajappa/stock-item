  </servlet>
  
  <servlet-mapping>
  	<servlet-name>EditItem</servlet-name>
  	<url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
  	<servlet>
  		<servlet-name>Login</servlet-name>
  		<servlet-class>com.ty.controller.LoginServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
  		<servlet-name>Login</servlet-name>
  		<url-pattern>/login</url-pattern>
  	</servlet-mapping>
  	<servlet>
  		<servlet-name>Logout</servlet-name>
  		<servlet-class>com.ty.controller.LogoutServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
  		<servlet-name>Logout</servlet-name>
  		<url-pattern>/logout</url-pattern>
  	</servlet-mapping>
</web-app>
